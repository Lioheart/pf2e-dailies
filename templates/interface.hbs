<div class="content">
    {{#if rows.length}}
    <div class="group">
        {{#each rows}}
        {{#if (eq this.rows.[0].type 'drop')}}
        {{> dropRow entry=this.rows.[0] group=this label=this.label}}
        {{else}}
        {{> selectRow entry=this.rows.[0] group=this label=this.label}}
        {{/if}}
        {{/each}}
    </div>
    {{/if}}

    {{#each groups}}
    <div class="group {{this.type}}">
        <h3>{{this.label}}</h3>
        {{#each this.rows}}
        {{#if (eq this.type 'drop')}}
        {{> dropRow entry=this group=../this label=this.label}}
        {{else}}
        {{> selectRow entry=this group=../this label=this.label}}
        {{/if}}
        {{/each}}
    </div>
    {{/each}}
</div>

<div class="buttons">
    <button data-action="accept"><i class="fas fa-save"></i> {{i18n 'accept'}}</button>
    <button data-action="cancel"><i class="fas fa-times"></i> {{i18n 'cancel'}}</button>
</div>

{{#*inline 'dropRow'}}
<label data-droppable="true">{{label}}</label>
<input type="text" data-droppable="true" value="{{entry.name}}" data-type="{{group.type}}" data-category="{{group.category}}"
    data-uuid="{{entry.uuid}}" data-level="{{entry.level}}" disabled />
<a data-action="search" data-type="{{group.type}}" data-level={{entry.level}}>
    <i class="fas fa-search"></i>
</a>
<a data-action="clear" {{#unless entry.uuid}} class="disabled" {{/unless}}><i class="fas fa-times"></i></a>
{{/inline}}

{{#*inline 'selectRow'}}
<label>{{label}}</label>
<select data-type="{{group.type}}" data-category="{{group.category}}">
    {{selectOptions entry.options nameAttr='key' labelAttr='key' selected=entry.selected}}
</select>
{{/inline}}